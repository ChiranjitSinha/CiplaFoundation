<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_alignParentTop="true"
        android:background="@color/header_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5dp">

        <ImageButton
            android:id="@+id/ib_back_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/back_button_selector"
            android:src="@drawable/back_btn" />

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_toRightOf="@+id/ib_back_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/header_logo" />

        <RelativeLayout
            android:id="@+id/rl_divisionList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:clickable="true"
            android:paddingTop="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="18dp"
            android:gravity="center"
            android:layout_toLeftOf="@+id/rl_notifiaction"
            android:layout_centerVertical="true"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_divisionList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:clickable="false"
                android:background="@drawable/black_border_box"
                android:textColor="@color/red"
                android:text="  "
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_notifiaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/ib_option"
            android:visibility="visible">

        <ImageButton
            android:id="@+id/img_btn_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/notification" />

        <TextView
            android:layout_marginTop="4dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignRight="@+id/img_btn_notification"
            android:background="@drawable/circular_textview"
            android:gravity="center"
            android:text="3"
            android:textColor="#fff" />

         </RelativeLayout>

        <ImageButton
            android:id="@+id/ib_option"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/drop_btn" />

        <View
            android:id="@+id/v_line"
            android:layout_below="@+id/ib_option"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/header_underline"/>

      <!--  <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/v_line"
            android:background="#3b9e9c9a" />-->
    </RelativeLayout>



    <FrameLayout
        android:id="@+id/frm_Container"
        android:layout_below="@+id/rl_header"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></FrameLayout>


</RelativeLayout>






